<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/arkaplan_4"
    tools:context=".GirisActivity">

    <EditText
        android:id="@+id/giris_editEmail"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:hint="Mail Adresi"
        android:textStyle="bold"
        android:inputType="textEmailAddress"
        android:textColorHint="@color/black"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.478"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.224"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/giris_editSifre"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:hint="Sifre"
        android:textStyle="bold"
        android:inputType="textPassword"
        android:textAlignment="center"
        android:textColorHint="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.475"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/giris_editEmail"
        app:layout_constraintVertical_bias="0.113"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:layout_width="380dp"
        android:layout_height="74dp"
        android:background="@drawable/cerceve"
        app:layout_constraintBottom_toBottomOf="@+id/giris_editEmail"
        app:layout_constraintEnd_toEndOf="@+id/giris_editEmail"
        app:layout_constraintStart_toStartOf="@+id/giris_editEmail"
        app:layout_constraintTop_toTopOf="@+id/giris_editEmail"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="380dp"
        android:layout_height="74dp"
        android:background="@drawable/cerceve"
        app:layout_constraintBottom_toBottomOf="@+id/giris_editSifre"
        app:layout_constraintEnd_toEndOf="@+id/giris_editSifre"
        app:layout_constraintStart_toStartOf="@+id/giris_editSifre"
        app:layout_constraintTop_toTopOf="@+id/giris_editSifre"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/girisButton"
        android:layout_width="161dp"
        android:layout_height="45dp"
        android:layout_marginBottom="318dp"
        android:background="@drawable/giris_button"
        android:onClick="girisYap"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/giris_editSifre"
        app:layout_constraintVertical_bias="1.0"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/kayit"
        android:layout_width="161dp"
        android:layout_height="45dp"
        android:background="@drawable/kayitol_button"
        android:onClick="kayitOl"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/girisButton"
        app:layout_constraintVertical_bias="0.12"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>